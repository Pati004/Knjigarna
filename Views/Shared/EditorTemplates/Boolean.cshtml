@model bool?

@{
    var isRequired = ViewData.ModelMetadata.IsRequired;
    var description = ViewData.ModelMetadata.Description;
}

<div class="form-group">
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="@ViewData.ModelMetadata.PropertyName"
               name="@ViewData.ModelMetadata.PropertyName" @(Model.GetValueOrDefault() ? "checked" : "")
               value="true" />
        <label class="form-check-label" for="@ViewData.ModelMetadata.PropertyName">
            @ViewData.ModelMetadata.GetDisplayName()
            @if (isRequired)
            {
                <span class="text-danger">*</span>
            }
        </label>
    </div>
    @if (!string.IsNullOrEmpty(description))
    {
        <small class="form-text text-muted">@description</small>
    }
    <span class="text-danger field-validation-valid" data-valmsg-for="@ViewData.ModelMetadata.PropertyName" data-valmsg-replace="true"></span>
</div>