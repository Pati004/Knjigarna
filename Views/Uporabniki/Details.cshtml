@model Knjigarna.Models.Uporabnik
@{
    ViewData["Title"] = "Podrobnosti uporabnika";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Podrobnosti uporabnika</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.DisplayFor(m => m.Ime)
                            @Html.DisplayFor(m => m.Priimek)
                            @Html.DisplayFor(m => m.DatumRojstva)
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(m => m.KrajRojstva)
                            @Html.DisplayFor(m => m.EMSO)
                            @Html.DisplayFor(m => m.Starost)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            @Html.DisplayFor(m => m.Email)
                            @Html.DisplayFor(m => m.JeAktiven)
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(m => m.DatumRegistracije)

                            <div class="display-field">
                                <label class="display-label">Polno ime</label>
                                <div class="display-value">
                                    <strong>@Model.PolnoIme</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="fas fa-edit"></i> Uredi
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-2">
                            <i class="fas fa-trash"></i> Izbriši
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Nazaj na seznam
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>