@model Knjigarna.Models.Uporabnik
@{
    ViewData["Title"] = "Dodaj uporabnika";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Dodaj novega uporabnika</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                @Html.EditorFor(m => m.Ime)
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(m => m.Priimek)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                @Html.EditorFor(m => m.DatumRojstva)
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(m => m.KrajRojstva)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                @Html.EditorFor(m => m.EMSO)
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(m => m.Starost)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                @Html.EditorFor(m => m.Email)
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(m => m.JeAktiven)
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg me-2">
                                <i class="fas fa-save"></i> Shrani
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Nazaj na seznam
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}